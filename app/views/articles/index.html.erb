<h1>All articles<h2>

<% @articles.each do |article| %>
 
    <p><%= link_to "#{article.title}", "/articles/#{article.id}" %> <small><%= link_to "❌", article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } %></small> </p> 
 <% end %>

<small><%= link_to "➕ Add a new article", "/new" %></small>